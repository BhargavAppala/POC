<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TAL Sales Portal</title>

    @{Html.RenderPartial("~/Views/Shared/_GruntBuildCssInjectedFiles.cshtml");}

    @{Html.RenderPartial((string)string.Format("~/Views/Shared/Brands/_GruntBuildCssInjectedFiles_{0}.cshtml", ViewBag.Brand));}

</head>
<body ng-app="salesPortalApp" class="sp-styles">
    <spinner name="fullOverlaySpinner" class="page-spinner" show="true">
        <tal-full-page-loader></tal-full-page-loader>
    </spinner>
    <spinner name="updateUnderwritingSpinner" class="page-spinner" show="false">
        <tal-full-page-loader text="'syncing application with underwriting information'"></tal-full-page-loader>
    </spinner>

    <div class="container-fluid">
        <div class="tal-side-menu collapsed">
            @{Html.RenderPartial("~/Views/Shared/_MainMenu.cshtml");}
        </div>

        <div class="row tal-header">
            @{Html.RenderPartial("~/Views/Shared/_PageHeader.cshtml");}
        </div>
    </div>

    <div class="main-content-collapse-menu">
        <div class="tal-main-content wide container">
            <div class="main-body">
                @RenderBody()
            </div>
        </div>
    </div>
    @{Html.RenderPartial("~/Views/Shared/_GruntBuildJsInjectedFiles.cshtml");}
    @RenderSection("Scripts", false)
    @{Html.RenderPartial("~/Views/Shared/_BuildNumber.cshtml");}
</body>
</html>
