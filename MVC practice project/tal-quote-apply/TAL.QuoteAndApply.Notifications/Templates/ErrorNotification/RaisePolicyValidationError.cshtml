@model TAL.QuoteAndApply.Notifications.Models.RaisePolicyValidationErrorViewModel

<h1 style="font-size: 24px; font-family: arial;">Raise Policy Validation Error - @Model.Environment</h1>
<p style="font-family: arial;">There were validation errors when submitting the quote to the Raise Policy service</p>

<table style="font-family: arial;">
    <tr>
        <td>Quote reference number:</td>
        <td>@Model.QuoteReferenceNumber</td>
    </tr>
    <tr>
        <td>Validation errors:</td>
        <td>
            @foreach (var v in Model.Validations)
            {
                <div>@v</div>
            }
        </td>
    </tr>
</table>