@using TAL.QuoteAndApply.Analytics.Models

@{
    ViewBag.Title = "Select Cover";
    ViewBag.AppName = "SelectCover";
    ViewBag.ShowSpinnerOnStartup = "true";
    ViewBag.StepIndex = 1;
    ViewBag.PageCssClass = "page-select-cover";
}

@section Analytics
{
    @{
        Html.RenderAction("Header", "Analytics", new { model = new AnalyticsPageModel("CoverSelectionPage", ViewBag.Title, "Quote", DateTime.Now, DateTime.Now) });
    }
}

<section class="tal-section-select">
    @{
        Html.RenderPartial("~/Views/Shared/_PageHeader.cshtml");
    }
    <div class="container">
        <main class="tal-layout-main row">
            <tal-select-plan init-metadata="@ViewBag.initMetaData"></tal-select-plan>
        </main>
    </div>
</section>


@section scripts{
    @Html.Partial("~/Views/Shared/_CoverCalculator.cshtml");
}